<configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/edi.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level %logger{10} %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="PROCESSED_FILE" class="ch.qos.logback.core.FileAppender">
        <file>log/processedFiles.log</file>
        <encoder>
            <pattern>%date %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="processedFiles" additivity="false">
        <appender-ref ref="PROCESSED_FILE" />
    </logger>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>